#------------------------------------------------------------------------------------------------------Menu Système-------------------------------------------------------------------------------------------------------------------------------------------------------#

# Shutdown, Reboot, Lock Screen, and Logout #ffe457
set $sysmenu "    Système:  é[T]eindre  re[D]émarrer   [S]ortir "
bindsym $mod+Shift+Return      mode $sysmenu
mode $sysmenu {
    bindsym t         exec shutdown -P now
    bindsym d         exec shutdown -r now
    bindsym s         exec --no-startup-id i3-msg exit, mode "default"
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}
